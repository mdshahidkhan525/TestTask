<div class="container">
<div class="row">
        <div class="col-12">
            <div class="card card-margin">
                <div class="card-body">
                    <div class="row search-body">
                        <div class="col-lg-12">
                            <div class="search-result">
                                <div class="result-header">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="records">Showing: <b>10</b> of <b><%=@users.count%></b> result</div>
                                            <hr class="hr hr-blurry">
                                        </div>
                                    </div>
                                </div>
                                <div class="result-body">
                                    <div class="table-responsive">
                                        <table class="table widget-26">
                                            <tbody>
                                             <% @users.each do |user| %>
                                                <% unless current_user.blocked_by?(user)%>
                                                    <tr>
                                                        <td>
                                                            <div class="widget-26-job-emp-img">
                                                                <img src="https://bootdey.com/img/Content/avatar/avatar5.png" alt="Company" />
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="widget-26-job-title">
                                                                <a href="#"><b><%=full_name(user)%></b></a>
                                                                <p class="m-0"><%=user.username%></p>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="widget-26-job-info">
                                                                <p class="type m-0">Full-Time</p>
                                                                <p class="text-muted m-0">in <span class="location">London, UK</span></p>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="widget-26-job-salary-ceneter">
                                                                <%= user.followers.count%> followers
                                                            </div>
                                                        </td>

                                                        <% if current_user != user%>
                                                            <td>
                                                                <div class="widget-26-job-category bg-soft-base">
                                                                    <% if current_user.sent_follow_request_to?(user)%>
                                                                        <span><%= link_to 'Withdraw Request', follow_path(user_id: user.id), data: { 'turbo-method' => :patch }%></span>
                                                                    <% else %>
                                                                        <span><%= link_to 'Follow', follow_path(user_id: user.id), data: { 'turbo-method' => :post }%></span>
                                                                    <% end %>
                                                                </div>
                                                                <div class="widget-26-job-category bg-soft-base">
                                                                    <% if user.blocked_by?(current_user)%>
                                                                        <span><%= link_to 'Unblock', unblock_path(user_id: user.id), data: { 'turbo-method' => :patch }%></span>
                                                                    <% else %>
                                                                        <span><%= link_to 'Block', block_path(user_id: user.id), data: { 'turbo-method' => :patch } %></span>
                                                                    <% end %>
                                                                </div>
                                                                </div>
                                                            </td>
                                                        <% else %>
                                                            <td>
                                                                <div class="widget-26-job-category bg-soft-base">
                                                                    <span>You</span>
                                                                </div>
                                                            </td>
                                                        <% end %>
                                                    </tr>
                                                <% end %>
                                            <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
